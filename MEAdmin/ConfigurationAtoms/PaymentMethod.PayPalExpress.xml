  <Title>Configure PayPal Express Checkout</Title>

  <AppConfig Required="false" Advanced="false" FriendlyName="API Username">
    <Name>PayPal.API.Username</Name>
  </AppConfig>

  <AppConfig Required="false" Advanced="false" FriendlyName="API Password">
    <Name>PayPal.API.Password</Name>
  </AppConfig>

  <AppConfig Required="false" Advanced="false" FriendlyName="API Signature">
    <Name>PayPal.API.Signature</Name>
  </AppConfig>

  <AppConfig Required="false" Advanced="false" FriendlyName="Allow Anonymous Checkout">
    <Name>PayPal.Express.AllowAnonCheckout</Name>
  </AppConfig>

  <AppConfig Required="false" Advanced="false" FriendlyName="Show on Cart Page">
    <Name>PayPal.Express.ShowOnCartPage</Name>
  </AppConfig>

  <AppConfig Required="false" Advanced="false" FriendlyName="API Email (usually blank)">
    <Name>PayPal.API.MerchantEMailAddress</Name>
  </AppConfig>

  
</ConfigurationAtom>